<script>
    $(document).ready(function () {
        $(document).on('click', '.open-edit-form', function () {
            var row = $(this).closest('tr');
            var status = row.find('td:eq(7)').text().trim();
            const formEdit = document.getElementById('formEdit');
            const statusRadioPending = formEdit.querySelector('input[value="Pending"]');
            const statusRadioCancel = formEdit.querySelector('input[value="Cancel"]');
            const statusRadioDelivery = formEdit.querySelector('input[value="Delivery"]');
            const statusRadioReceived = formEdit.querySelector('input[value="Received"]');
            const statusRadioExchange = formEdit.querySelector('input[value="Exchange"]');
            const statusRadioProcessed = formEdit.querySelector('input[value="Processed"]');
            const orderIdInput = formEdit.querySelector('input[name="orderId"]');
            orderIdInput.value = row.find('td:eq(0)').text().trim();
            if (status ===  'Pending'){
                statusRadioPending.checked = true;
            } else if (status === 'Cancel'){
                statusRadioCancel.checked = true;
            } else if (status === 'Delivery'){
                statusRadioDelivery.checked = true;
            } else if (status === 'Received'){
                statusRadioReceived.checked = true;
            } else if (status === 'Exchange'){
                statusRadioExchange.checked = true;
            }else {
                statusRadioCancel.checked = true;
            }
            formEdit.style.display = 'flex';

        });

        $(document).on('click', '.showAddFormButton', function () {
            
            const formCreate = document.getElementById('formCreate');
            
            formCreate.style.display = 'flex';

        });


        $(document).on('click', function (e) {
            const formEdit = document.getElementById('formEdit');
            formEdit.addEventListener('click', function (e) {
                if (e.target === formEdit) {
                    formEdit.style.display = 'none'; // Ẩn overlay nếu bấm ra ngoài
                }
            });
            const formCreate = document.getElementById('formCreate');
            formCreate.addEventListener('click', function (e) {
                if (e.target === formCreate) {
                    formCreate.style.display = 'none'; // Ẩn overlay nếu bấm ra ngoài
                }
            });
        });



    });
</script>
