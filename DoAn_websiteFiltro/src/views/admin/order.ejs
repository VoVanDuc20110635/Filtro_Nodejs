                        <th class="custom-column">Thanh toán</th>
                        <th class="custom-column">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                        <% if (typeof orders !== 'undefined' && orders.length > 0) { %>
                            <% orders.forEach(function(order) { %>
                            <tr class="spandd">
                                <td>
                                    <% if (order.orderId !== null && order.orderId) { %>
                                        <%= order.orderId %>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (order.User && order.User.name !== null) { %>
                                        <%= order.User.name %>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (order.orderDate !== null && order.orderDate) { %>
                                        <%= order.orderDate %>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (order.phoneNumber !== null && order.phoneNumber) { %>
                                        <%= order.phoneNumber %>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (order.email !== null && order.email) { %>
                                        <%= order.email %>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (order.address !== null && order.address) { %>
                                        <%= order.address %>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (order.total !== null && order.total) { %>
                                        <%= order.total %>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (order.status === 1) { %>
                                        <p style="margin-top: 8px; color: black; border: solid;" >Pending</p>
                                    <% } else if (order.status === 2) { %>
                                        <p style="margin-top: 8px; color: rgb(241, 7, 7); border: solid;">Cancel</p>
                                    <% } else if (order.status === 3) { %>
                                        <p style="margin-top: 8px; color: rgb(241, 113, 7); border: solid;">Delivery</p>
                                    <% } else if (order.status === 4) { %>
                                        <p style="margin-top: 8px; color: rgb(3, 181, 48); border: solid;">Received</p>
                                    <% } else if (order.status === 5) { %>
                                        <p style="margin-top: 8px; color: rgb(8, 32, 193); border: solid;">Exchange</p>
                                    <% } else if (order.status === 6) { %>
                                        <p style="margin-top: 8px; color: rgb(8, 125, 148); border: solid;">Processed</p>
                                    <% } else { %>
                                        Unknown Role
                                    <% } %>
                                </td>
                                <td>
                                    <% if (order.paymentMethod === 1) { %>
                                        <p style="margin-top: 8px; color: black; " >COD - Pending</p>
                                    <% } else if (order.paymentMethod === 2) { %>
                                        <p style="margin-top: 8px; color: rgb(6, 232, 29); " >COD</p>
                                    <% } else if (order.paymentMethod === 3) { %>
                                        <p style="margin-top: 8px; color: black; " >Vnpay - Pending</p>
                                    <% } else if (order.paymentMethod === 4) { %>
                                        <p style="margin-top: 8px; color: rgb(6, 232, 29); " >Vnpay</p>
                                    <% } %>
                                </td>
                                <td>
                                    <a style="cursor: pointer;" class="edit open-edit-form" data-toggle="modal" style="margin-right: 5px;">
