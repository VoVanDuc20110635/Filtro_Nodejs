        <div class="content">
            <!-- Animated -->
            <div class="animated fadeIn">
                <h2>Danh sách người dùng</h2>
                <div class="col-md-12 form-group">
                    <% if (typeof message !== 'undefined' && message) { %>
                      <div id="errorMessage" class="alert alert-success" role="alert">
                        <%= message %>
                      </div>
                      <% } %>
                        <% if (typeof errorMessage !== 'undefined' &&  errorMessage) { %>
                          <div id="errorMessage1" class="alert alert-danger" role="alert">
                            <%= errorMessage %>
                          </div>
                          <% } %>
                  </div>
                <div class="search-box">
                    <div class="search">
                        <!-- <button class="my-button showAddFormButton" id="showAddFormButton"><i class="fas fa-plus add"></i>Add Category</button> -->
                    </div>
                </div>
    
                <table id="example" class="table table-striped" style="width:100%">
                    <thead>
                    <tr>
                        <th class="custom-column">Id</th>
                        <th class="custom-column">Tên</th>
                        <th class="custom-column">Ngày sinh</th>
                        <th class="custom-column">Giới tính</th>
                        <th class="custom-column">Địa chỉ</th>
                        <th class="custom-column">Zip</th>
                        <th class="custom-column">Thành phố</th>
                        <th class="custom-column">Email</th>
                        <th class="custom-column">Số điện thọai</th>
                        <th class="custom-column">Status</th>
                        <th class="custom-column">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                        <% if (typeof users !== 'undefined' && users.length > 0) { %>
                            <% users.forEach(function(user) { %>
                            <tr class="spandd">
                                <td>
                                    <% if (typeof user.userId !== null && user.userId) { %>
                                        <%= user.userId%>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (typeof user.name !== null && user.name) { %>
                                        <%= user.name%>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (typeof user.dob !== null && user.dob) { %>
                                        <%= user.dob%>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (typeof user.sex !== null && user.sex) { %>
                                        <%= user.sex%>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (typeof user.address !== null && user.address) { %>
                                        <%= user.address%>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (typeof user.zip !== null && user.zip) { %>
                                        <%= user.zip%>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (typeof user.city !== null && user.city) { %>
                                        <%= user.city%>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (typeof user.email !== null && user.email) { %>
                                        <%= user.email%>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (typeof user.phoneNumber !== null && user.phoneNumber) { %>
                                        <%= user.phoneNumber%>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (user.status === 1) { %>
                                        Active
                                    <% } else { %>
                                        Inactive
                                    <% } %>
                                </td>
                                <td>
                                    <a style="cursor: pointer;" class="edit open-edit-form" data-toggle="modal" onclick="showEditModal()" style="margin-right: 5px;">
                                        <i class="fa-solid fa-pencil" style="color: #ff7100;"></i>
                                    </a>
                                </td>
                            </tr>
                        <% }); %>
                        <% }else { %>
                            <tr>
                                <td colspan="7" class="text-center"><p>No data</p></td>
                            </tr>
                        <% } %>
                    </tbody>
