<script>
    $(document).ready(function () {
        $(document).on('click', '.open-edit-form', function () {
            var row = $(this).closest('tr');
            var status = row.find('td:eq(9)').text().trim();
            const formEdit = document.getElementById('formEdit');
            const nameInput = formEdit.querySelector('input[name="name"]');
            const dobInput = formEdit.querySelector('input[name="dob"]');
            const statusRadioActive = formEdit.querySelector('input[value="active"]');
            const statusRadioInactive = formEdit.querySelector('input[value="inactive"]');
            const sexInput = formEdit.querySelector('input[name="sex"]');
            const addressInput = formEdit.querySelector('input[name="address"]');
            const zipInput = formEdit.querySelector('input[name="zip"]');
            const cityInput = formEdit.querySelector('input[name="city"]');
            const emailInput = formEdit.querySelector('input[name="email"]');
            const phoneNumberInput = formEdit.querySelector('input[name="phoneNumber"]');
            const userIdInput = formEdit.querySelector('input[name="userId"]');
            nameInput.value = row.find('td:eq(1)').text().trim();
            dobInput.value = row.find('td:eq(2)').text().trim();
            sexInput.value = row.find('td:eq(3)').text().trim();
            addressInput.value = row.find('td:eq(4)').text().trim();
            zipInput.value = row.find('td:eq(5)').text().trim();
            cityInput.value = row.find('td:eq(6)').text().trim();
            emailInput.value = row.find('td:eq(7)').text().trim();
            phoneNumberInput.value = row.find('td:eq(8)').text().trim();
            userIdInput.value = row.find('td:eq(0)').text().trim();

            if (status === 'Active'){
                statusRadioActive.checked = true;
                statusRadioInactive.checked = false;
            } else{
                statusRadioActive.checked = false;
                statusRadioInactive.checked = true;
            }
            formEdit.style.display = 'flex';

        });


        $(document).on('click', function (e) {
            const formEdit = document.getElementById('formEdit');
            formEdit.addEventListener('click', function (e) {
                if (e.target === formEdit) {
                    formEdit.style.display = 'none'; // Ẩn overlay nếu bấm ra ngoài
                }
            });
        });



    });
</script>
