<script>
    $(document).ready(function () {
        $(document).on('click', '.open-edit-form', function () {
            var row = $(this).closest('tr');
            var status = row.find('td:eq(7)').text().trim();
            const formEdit = document.getElementById('formEdit');
            const productNameInput = formEdit.querySelector('input[name="productName"]');
            // const productImage = formEdit.querySelector('input[name="image"]');
            const productQuantityInput = formEdit.querySelector('input[name="quantity"]');
            const productSoldInput = formEdit.querySelector('input[name="sold"]');
            const productDescriptionInput = formEdit.querySelector('input[name="description"]');
            const productCreatedDateInput = formEdit.querySelector('input[name="createdDate"]');
            const statusRadioActive = formEdit.querySelector('input[value="active"]');
            const statusRadioInactive = formEdit.querySelector('input[value="inactive"]');
            const flavorIdSelect = formEdit.querySelector('select[name="flavorId"]');
            const categoryIdSelect = formEdit.querySelector('select[name="categoryId"]');
            const productId = formEdit.querySelector('input[name="productId"]');
            // const flavorId = formEdit.querySelector('input[name="flavorId"]');
            // const categoryId = formEdit.querySelector('input[name="categoryId"]');
            productNameInput.value = row.find('td:eq(1)').text().trim();
            // productImageInput.value = row.find('td:eq(0)').text().trim();
            productQuantityInput.value = row.find('td:eq(3)').text().trim();
            productSoldInput.value = row.find('td:eq(4)').text().trim();
            productDescriptionInput.value = row.find('td:eq(5)').text().trim();
            productCreatedDateInput.value = row.find('td:eq(6)').text().trim();
            const selectedFlavorId = row.find('td:eq(12)').text().trim();
            const selectedCategoryId = row.find('td:eq(13)').text().trim();
            productId.value = row.find('td:eq(11)').text().trim();

            if (status === 'Active'){
                statusRadioActive.checked = true;
                statusRadioInactive.checked = false;
            } else{
                statusRadioActive.checked = false;
                statusRadioInactive.checked = true;
            }
            for (let i = 0; i < flavorIdSelect.options.length; i++) {
                const option = flavorIdSelect.options[i];
                
                // Check if the option value matches the selectedFlavorId
                if (parseInt(option.value) === parseInt(selectedFlavorId)) {
                    // Set the selected attribute for the matching option
                    option.selected = true;
                    break; // Break out of the loop since we found the matching option
                }
            }
            for (let i = 0; i < categoryIdSelect.options.length; i++) {
                const option = categoryIdSelect.options[i];
                
                // Check if the option value matches the selectedFlavorId
                if (parseInt(option.value) === parseInt(selectedCategoryId)) {
                    // Set the selected attribute for the matching option
                    option.selected = true;
                    break; // Break out of the loop since we found the matching option
                }
            }

            formEdit.style.display = 'flex';

        });

        $(document).on('click', '.showAddFormButton', function () {
            
            const formCreate = document.getElementById('formCreate');
            
            formCreate.style.display = 'flex';

        });


        $(document).on('click', function (e) {
            const formEdit = document.getElementById('formEdit');
            formEdit.addEventListener('click', function (e) {
                if (e.target === formEdit) {
                    formEdit.style.display = 'none'; // Ẩn overlay nếu bấm ra ngoài
                }
            });
            const formCreate = document.getElementById('formCreate');
            formCreate.addEventListener('click', function (e) {
                if (e.target === formCreate) {
                    formCreate.style.display = 'none'; // Ẩn overlay nếu bấm ra ngoài
                }
            });
        });



    });
</script>
