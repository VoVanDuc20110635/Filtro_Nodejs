                        <% if (typeof message !== 'undefined' && message) { %>
                            <div id="errorMessage" class="alert alert-success" role="alert"
                                > <%= message%>
                            </div>
                        <% } %>
                        <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
                            <div id="errorMessage1" class="alert alert-danger" role="success"
                                > <%= errorMessage%>
                            </div>
                        <% } %>
                    </div>
                    <table id="example" class="table table-striped" style="width:100%">
                        <thead>
                        <tr>
                            <th class="custom-column">Name</th>
                            <th class="custom-column">Date</th>
                            <th class="custom-column">Status</th>
                            <th class="custom-column">Role</th>
                            <th class="custom-column">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% if (typeof accounts !== 'undefined' && accounts.length > 0) { %>
                            <% accounts.forEach(function(account) { %>
                                <tr class="spandd">
                                    <td><%= account.accountName %></td>
                                    <td><%= account.createdDate %></td>
                                    <td><%= account.status %></td>
                                    <td>
                                        <% if (account.roleNumber === 1) { %>
                                            Admin
                                        <% } else if (account.roleNumber === 2) { %>
                                            Staff
                                        <% } else if (account.roleNumber === 3) { %>
                                            User
                                        <% } else { %>
                                            Unknown Role
                                        <% } %>
                                    </td>
                                    <td>
                                        <a href="#editModal" class="edit" data-toggle="modal" onclick="showEditModal()">
                                            <i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i>
                                        </a>
                                        <a href="#deleteModal" id="deleteModalIcon" class="delete" data-toggle="modal" onclick="showDeleteModal()">
                                            <i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i>
                                        </a>
                                        <input type="hidden" id="id" value="<%= account.id %>">
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else{ %>
                                <tr>
                                    <td colspan="5" class="text-center"><p>No data</p></td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>

                    

