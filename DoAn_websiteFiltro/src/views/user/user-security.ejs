<th:block th:fragment="content">
    <div class="text-center">
        <% if (!session.user) { %>
            <a href="/login" style="border: 1px solid black; padding: 5px; background-color: white;">
                <%= message %>
            </a>
        <% } %>
    </div>
    
    <% if (typeof session !== 'undefined' && session && session.user) { %>
        <div class="container-xl px-4 mt-4">
            <!-- Account page navigation-->
            <nav class="nav nav-borders">
                <a class="nav-link  ms-0" href="/user/profile"
                >Profile</a>
                <a class="nav-link" href="/user/billing"
                >Order</a>
                <a class="nav-link active" href="/user/security"
                >Password</a>
            </nav>
            <hr class="mt-0 mb-4">
            <div class="row">
                <div class="col">
                    <!-- Change password card-->
                    <div class="card mb-4">
                        <div class="card-header">Thay đổi mật khẩu</div>
                        <div class="card-body">
                            <% if (typeof successMessage !== 'undefined' && successMessage) { %>
                                <div class="mt-3 alert alert-success" role="alert">
                                    Tài khoản của bạn đã được cập nhật thành công!.
                                </div>
                            <% } %>
                            <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
                                <div class="mt-3 alert alert-danger" role="alert" >
                                    <%= errorMessage%>
                                </div>
                            <% } %>
                            <form method="post" action="/user/security">
                                <!-- Form Group (current password)-->
                                <div class="mb-3">
                                    <label class="small mb-1" for="currentPassword">Nhập mật khẩu hiện tại</label>
                                    <input class="form-control" id="currentPassword" type="password"
                                        name="oldPassword"
                                        placeholder="Enter current password">
                                </div>
                                <!-- Form Group (new password)-->
                                <div class="mb-3">
                                    <label class="small mb-1" for="newPassword">Nhập mật khẩu mới</label>
                                    <input class="form-control" id="newPassword" type="password"
                                        name="newPassword"
                                        placeholder="Enter new password">
                                </div>
                                <!-- Form Group (confirm password)-->
                                <div class="mb-3">
                                    <label class="small mb-1" for="confirmPassword">Nhập lại mật khẩu mới:</label>
                                    <input class="form-control" id="confirmPassword" type="password"
                                        name="repeatPassword"
                                        placeholder="Confirm new password">
                                </div>
                                <button class="btn btn-primary" type="submit">Cập nhật</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
