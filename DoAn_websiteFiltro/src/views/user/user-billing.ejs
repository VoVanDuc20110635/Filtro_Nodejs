    <!-- if you want to use the jquery code, you have to import jquery library in the head of this file html -->
    <script>
        $(document).ready(function () {
            // Handle click events for all <a> tags with the "delete" class
            $("a.delete").on("click", function () {
                // Get the data-order-id attribute value from the clicked <a> tag
                var orderId = $(this).data("order-id");

                // Set the value of the input with id "deleteOrderId" to the orderId
                $("#deleteOrderId").val(orderId);

                // Add the "show" class to the modal with id "deleteBillingModal"
                $("#deleteBillingModal").addClass("show");

                // Set the style "display: block" for the modal
                $("#deleteBillingModal").css("display", "block");
            });
        });
    </script>


    <script>
        $(document).ready(function () {
            // Add an event listener for the close button and Cancel input
            $(".modal .close, .modal input[value='Cancel']").on("click", function () {
                $("#deleteBillingModal").removeClass("show");
                $("#deleteBillingModal").css("display", "none");
            });
