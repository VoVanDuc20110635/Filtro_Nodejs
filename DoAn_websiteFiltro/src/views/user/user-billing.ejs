                </a>
                <% } %>
        </div>
        <% if (typeof session !=='undefined' && session && session.user) { %>
            <div class="container-xl px-4 mt-4">
                <!-- Account page navigation-->
                <nav class="nav nav-borders">
                    <a class="nav-link ms-0" href="/user/profile">Profile</a>
                    <a class="nav-link active" href="/user/billing">Order</a>
                    <a class="nav-link" href="/user/security">Password</a>
                </nav>
                <hr class="mt-0 mb-4">
                <!-- Payment methods card-->
                <!-- Billing history card-->
                <div class="card mb-4">
                    <div class="card-header">Order History</div>
                    <div class="card-body p-0" th:if="${!#lists.isEmpty(orderList) or orderList != null}">
                        <!-- Billing history table-->
                        <div class="table-responsive table-billing-history">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th class="border-gray-200" scope="col">ID</th>
                                        <th class="border-gray-200" scope="col">Date</th>
                                        <th class="border-gray-200" scope="col">Price</th>
                                        <th class="border-gray-200" scope="col">Status</th>
                                        <th class="border-gray-200" scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (typeof orderList !=='undefined' && orderList) { %>
                                    <% orderList.forEach(function(item, index) { %>
                                        <tr>
                                            <td>
                                                <%= '#' + item.orderId %>
                                            </td>
                                            <td>
                                                <%= new Date(item.orderDate).toISOString().slice(0, 10) %>
                                            </td>
                                            <td>
                                                <% if (item.total !== null && item.total !== undefined) { %>
                                                    <%= item.total%>đ
                                                <% } else { %>
                                                    <!-- Handle the case where item.total is null or undefined -->
                                                    No data
                                                <% } %>
                                            </td>
                                            
                                            <td>
                                                <% if (item.status===1) { %>
                                                    <span class="badge bg-light text-dark">Pending verification</span>
                                                    <% } else if (item.status===2) { %>
                                                        <span class="badge bg-light text-dark">Verified</span>
                                                        <% } else if (item.status===3) { %>
                                                            <span class="badge bg-light text-dark">On its way</span>
                                                            <% } else if (item.status===4) { %>
                                                                <span
                                                                    class="badge bg-success text-dark">Delivered</span>
                                                                <% } else if (item.status===5) { %>
                                                                    <span class="badge bg-light text-dark">Processing
                                                                        return</span>
                                                                    <% } else if (item.status===6) { %>
                                                                        <span class="badge bg-success text-dark">Return
                                                                            processed</span>
                                                                        <% } %>
                                            </td>
                                            <td class="action-td">
                                                <a href="/invoice/<%= item.orderId %>"
                                                    class="btn btn-outline-primary btn-sm">Read Invoice</a>
                                                <% if (item.status> 2) { %>
                                                    <a href="#" data-toggle="modal"
                                                        id="<%= 'showDeleteBillingModal' + item.orderId %>"
                                                        class="delete btn btn-outline-danger btn-sm"
                                                        data-order-id="<%= item.orderId %>">Cancel Order</a>
                                                    <input type="hidden" name="id" id="id" value="<%= item.orderId %>">
                                                    <% } %>
                                            </td>
                                        </tr>
                                        <% }); %>
                                        <% }else { %>
                                            <tr>
                                                <td colspan="5" class="text-center"><p>No data</p></td>
                                            </tr>
                                            <% } %>
                                </tbody>

                            </table>
                        </div>
                    </div>
                    <% if (!orderList || orderList.length===0) { %>
                        <div class="text-center mt-5 mb-5">
                            <h2 class="font-bold">You don't have any orders yet!</h2>
                        </div>
                        <% } %>

                </div>
            </div>

            <div id="deleteBillingModal" class="modal fade">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form method="post" action="/order/cancel">
                            <div class="modal-header">
                                <h4 class="modal-title">Delete Employee</h4>
                                <button type="button" class="close" data-dismiss="modal"
                                    aria-hidden="true">&times;</button>
                            </div>
                            <div class="modal-body">
                                <p>Are you sure you want to delete these Records?</p>
                                <p class="text-warning"><small>This action cannot be undone.</small></p>
                            </div>
                            <div class="modal-footer">
                                <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                                <input type="submit" class="btn btn-danger" value="Delete">
                                <input type="hidden" name="id" id="deleteOrderId">
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <% } %>
    </th:block>



