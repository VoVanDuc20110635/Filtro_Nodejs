    <script>
        const toggleButton = document.getElementById("toggle-categories");
        const navbarVertical = document.getElementById("navbar-vertical");

        let isNavVisible = true;

        toggleButton.addEventListener("click", function () {
            if (isNavVisible) {
                navbarVertical.style.display = "none";
                isNavVisible = false;
            } else {
                navbarVertical.style.display = "block";
                isNavVisible = true;
            }
        });
    </script>

    <script>
        function submitHiddenFormFromSortType(input) {
            var lowPrice = document.querySelector('input[name="lowPrice"]');
            var highPrice = document.querySelector('input[name="highPrice"]');
            var sortType = document.querySelector('input[name="sortType"]');
            var flavorId = document.querySelector('input[name="flavorId"]');
            var currentPage = document.querySelector('input[name="currentPage"]');
            // alert("ban dang chon page: " + input);
            if (input.includes(',')) {
                var priceRange = input.split(',')
                lowPrice.value = priceRange[0];
                highPrice.value = priceRange[1];
            } else if (input.includes("page")) {
                // var priceRange = checkbox.value.split(',')
                var pageNumberString = input.split('-');
                currentPage.value = pageNumberString[1];
                // alert("dang kiem tra page");
            } else if (input.length >= 5) {
                sortType.value = input;
            } else {
                flavorId.value = input;
            }
            // alert(lowPrice.value + " " + highPrice.value + " " + sortType.value + " " + flavorId.value + " " + currentPage.value);
            document.getElementById("hiddenForm").submit();
        }
    </script>

    <script>
        // Get a reference to the button
        const backToTopButton = document.querySelector('.back-to-top');

        // Add a scroll event listener
        window.addEventListener('scroll', () => {
            // If the user has scrolled down a certain amount (e.g., 300 pixels), show the button
            if (window.scrollY > 300) {
                backToTopButton.style.display = 'block';
            } else {
                backToTopButton.style.display = 'none';
            }
        });

        // Add a click event listener to scroll back to the top when the button is clicked
        backToTopButton.addEventListener('click', () => {
            // Smoothly scroll to the top of the page
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });

    </script>
