    <!-- Shop Start -->
    <div class="container-fluid pt-5">
        <div class="row px-xl-5 justify-content-center">
            <!-- Shop Product Start -->
            
                    
                        <!-- Shop Sidebar Start -->
                        <div class="col-lg-3 col-md-12">
                            <form id="hiddenForm" action="/category/<%= currentIdAll === 'all' ? 'all' : category.id %>"
                                method="GET" style="display: none;">
                                <input type="hidden" name="lowPrice" value="<%= dataLowPrice %>" />
                                <input type="hidden" name="highPrice" value="<%= dataHighPrice %>" />
                                <input type="hidden" name="sortType" value="<%= sortType %>" />
                                <input type="hidden" name="flavorId" value="<%= flavorId %>" />
                                <input type="hidden" name="currentPage" value="<%= currentPage %>" />
                                <input type="hidden" name="searchName" value="<%= searchName %>" />
                            </form>
                            <!-- Price Start -->
                            <div class="border-bottom mb-4 pb-4">
                                <h5 class="font-weight-semi-bold mb-4">Filter by price</h5>
                                <form>
                                    <form>
                                        <div
                                            class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                            <input type="checkbox" class="custom-control-input" id="price-all" style="cursor: pointer;"
                                                value="0,10000000" onchange="submitHiddenFormFromSortType(this.value)" <%
                                                if (dataLowPrice===0 && dataHighPrice===10000000) { %>checked<% } %>>
                                                <label class="custom-control-label" for="price-all">All Price</label>
                                        </div>

                                        <div
                                            class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                            <input type="checkbox" class="custom-control-input" id="price-1" style="cursor: pointer;"
                                                value="0,200000" onchange="submitHiddenFormFromSortType(this.value)" <%
                                                if (dataLowPrice===0 && dataHighPrice===200000) { %>checked<% } %>>
                                                <label class="custom-control-label" for="price-1">0 - 200000đ</label>
                                        </div>

                                        <div
                                            class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                            <input type="checkbox" class="custom-control-input" id="price-2" style="cursor: pointer;"
                                                value="200000,400000" onchange="submitHiddenFormFromSortType(this.value)"
                                                <% if (dataLowPrice===200000 && dataHighPrice===400000) { %>checked<% }
                                                %>>
                                                <label class="custom-control-label" for="price-2">200000 -
                                                    400000đ</label>
                                        </div>

                                        <div
                                            class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                            <input type="checkbox" class="custom-control-input" id="price-3" style="cursor: pointer;"
                                                value="400000,600000"
                                                onchange="submitHiddenFormFromSortType(this.value)" <% if
                                                (dataLowPrice===400000 && dataHighPrice===600000) { %>checked<% } %>>
                                                <label class="custom-control-label" for="price-3">400000 -
                                                    600000đ</label>
                                        </div>

                                        <div
                                            class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                            <input type="checkbox" class="custom-control-input" id="price-4" style="cursor: pointer;"
                                                value="600000,800000"
                                                onchange="submitHiddenFormFromSortType(this.value)" <% if
                                                (dataLowPrice===600000 && dataHighPrice===800000) { %>checked<% } %>>
                                                <label class="custom-control-label" for="price-4">600000 -
                                                    800000đ</label>
                                        </div>

                                        <div
                                            class="custom-control custom-checkbox d-flex align-items-center justify-content-between">
                                            <input type="checkbox" class="custom-control-input" id="price-5" style="cursor: pointer;"
                                                value="800000,9999999"
                                                onchange="submitHiddenFormFromSortType(this.value)" <% if
                                                (dataLowPrice===800000 && dataHighPrice===9999999) { %>checked<% } %>>
                                                <label class="custom-control-label" for="price-5">Over 800000đ</label>
                                        </div>
                                    </form>

                            </div>
                            <!-- Price End -->

                            <!-- Color Start -->

                            <div class="border-bottom mb-4 pb-4">
                                <h5 class="font-weight-semi-bold mb-4">Filter by flavor</h5>
                                <form>
                                    <div
                                        class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                        <input type="checkbox" class="custom-control-input" id="0" value="0" style="cursor: pointer;"
                                            onchange="submitHiddenFormFromSortType(this.value)" <% if (dataFlavorId===0)
