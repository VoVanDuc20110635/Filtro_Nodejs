    <th:block th:fragment="content">
        <div class="container">
            <div class="py-5 text-center">
                <h2>Payment for an order</h2>
            </div>
            <div class="text-center" th:if="${session.user == null}">
                <a th:href="@{/login}" th:text="${message}"
                    style="border: 1px solid black; padding: 5px; background-color: white;">
                </a>
            </div>
            <th:block th:if="${session.user != null}">
                <div class="row" th:if="${!#lists.isEmpty(cartItemList)}">
                    <div class="col-md-4 order-md-2 mb-4">
                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted">Your Cart</span>
                            <span class="badge badge-secondary badge-pill" th:text="${cartItemList.size()}"></span>
                        </h4>
                        <ul class="list-group mb-3 sticky-top" th:each="item : ${cartItemList}">
                            <li class="list-group-item d-flex justify-content-between lh-condensed">
                                <div>
                                    <h6 class="my-0" th:text="${item.product.productName}">Product Name</h6>
                                    <small class="text-muted" th:text="${item.quantity}">Brief description</small>
                                </div>
                                <span class="text-muted" th:text="${item.price}">$12</span>
                            </li>

                            <li class="list-group-item d-flex justify-content-between bg-light">
                                <div class="text-success">
                                    <h6 class="my-0">Promo code</h6>
                                    <small>EXAMPLECODE</small>
                                </div>
                                <span class="text-success">-0đ</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Total (vnđ)</span>
                                <strong
                                    th:text="${#numbers.formatDecimal(item.price * item.quantity, 0, 'COMMA', 0, 'COMMA') + 'đ'}"></strong>
                            </li>
                        </ul>
                        <form class="card p-2">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Promo code">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-secondary">Redeem</button>
                                </div>
                            </div>
                            <div class="list-group-item d-flex justify-content-between">
                                <span>Total Order</span>
                                <strong th:text="${#numbers.formatDecimal(sum, 0, 'COMMA', 0, 'COMMA') + 'đ'}"></strong>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-8 order-md-1">
                        <h4 class="mb-3">Billing Address</h4>
                        <form method="post" th:action="@{/order/placeOrder}" class="needs-validation" novalidate="">
                            <div class="mb-3">
                                <label for="username">Name</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">(❁´◡`❁)</span>
                                    </div>
                                    <input type="text" class="form-control" id="username" placeholder="Username"
                                        required="" readonly th:value="${session.user.getName()}">
                                    <div class="invalid-feedback" style="width: 100%;"> Your username is required.</div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label>Email <span class="text-muted">(not required)</span></label>
                                <th:block th:if="${session.user.getEmail()==null}">
                                    <input type="email" class="form-control" name="email" value="you@example.com">
                                </th:block>
                                <th:block th:if="${session.user.getEmail()!=null}">
                                    <input type="email" class="form-control" name="email" placeholder="you@example.com"
                                        th:value="${session.user.getEmail()}" readonly>
                                </th:block>
                                <div class="invalid-feedback"> Please enter a valid email address for shipping updates.
                                </div>
                            </div>
                            <div class="mb-3">
                                <label>Phone Number</label>
                                <th:block th:if="${session.user.getPhoneNumber()!=null}">
                                    <input type="text" class="form-control" placeholder="086" name="phone"
                                        th:value="${session.user.getPhoneNumber() != null ? session.user.getPhoneNumber() : '086'}">
                                </th:block>
                                <th:block th:if="${session.user.getPhoneNumber()==null}">
                                    <input type="text" class="form-control" value="086" name="phone">
                                </th:block>
                                <div class="invalid-feedback"> Please enter a valid phone numbers for shipping updates.
                                </div>
                            </div>
                            <div class="mb-3">
                                <label>Address</label>
                                <th:block th:if="${session.user.getAddress()!=null}">
                                    <input type="text" class="form-control" name="address" value="1234 Main St"
                                        required="">
                                </th:block>
                                <th:block th:if="${session.user.getAddress()==null}">
                                    <input type="text" class="form-control" name="address" value="1234 Main St"
                                        required="">
                                </th:block>
                                <div class="invalid-feedback"> Please enter your shipping address.</div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label>City</label>
                                    <th:block th:if="${session.user.getCity()!=null}">
                                        <input type="text" name="city" class="form-control" value="HCM">
                                    </th:block>
                                    <th:block th:if="${session.user.getCity()==null}">
                                        <input type="text" name="city" class="form-control" value="HCM">
                                    </th:block>
                                    <div class="invalid-feedback"> Please select a valid country.</div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label>Zip code</label>
                                    <th:block th:if="${session.user.getZip()!=null}">
                                        <input type="text" name="zip" class="form-control" placeholder=""
                                            required="required" th:value="${1}">
                                    </th:block>
                                    <th:block th:if="${session.user.getZip()==null}">
                                        <input type="text" name="zip" class="form-control" placeholder=""
                                            required="required" th:value="${1}">
                                    </th:block>
                                    <div class="invalid-feedback"> Zip code required.</div>
                                </div>
                            </div>
                            <hr class="mb-4">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="same-address">
                                <label class="custom-control-label" for="same-address">Shipping address is the same as
                                    my
                                    billing address</label>
                            </div>
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="save-info">
                                <label class="custom-control-label" for="save-info">Save this information for next
                                    time</label>
                            </div>
                            <hr class="mb-4">
                            <h4 class="mb-3">Payment Method</h4>
                            <div class="d-block my-3">
                                <div class="custom-control custom-radio">
                                    <input id="codRadio" th:value="${paymentMethods.get(0).getId()}"
                                        name="paymentMethod" type="radio" class="custom-control-input" checked=""
                                        required="">
                                    <label class="custom-control-label" for="codRadio">Home Delivery (COD)</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input id="creditRadio" th:value="${paymentMethods.get(1).getId()}"
                                        name="paymentMethod" type="radio" class="custom-control-input" required="">
                                    <label class="custom-control-label" for="creditRadio">Bank card payment</label>
                                </div>
                            </div>
                            <div class="form-group" id="cc-fields">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="cc-name">Owner's name</label>
                                        <input type="text" class="form-control" id="cc-name" placeholder="" required="">
                                        <small class="text-muted">Full name as displayed on card</small>
                                        <div class="invalid-feedback"> Name on card is required</div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="cc-number">Card number</label>
                                        <input type="text" class="form-control" id="cc-number" placeholder=""
                                            required="">
                                        <div class="invalid-feedback"> Credit card number is required</div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3 mb-3">
                                        <label for="cc-expiration">Expiration date</label>
                                        <input type="text" class="form-control" id="cc-expiration" placeholder=""
                                            required="">
                                        <div class="invalid-feedback"> Expiration date required</div>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label for="cc-cvv">CVV Code</label>
                                        <input type="text" class="form-control" id="cc-cvv" placeholder="" required="">
                                        <div class="invalid-feedback"> Security code required</div>
                                    </div>
                                </div>
                            </div>
                            <hr class="mb-4">
                            <button class="btn btn-primary btn-lg btn-block mb-5" type="submit">Continue to checkout
                            </button>
                        </form>
                    </div>
                </div>
                <div class="row justify-content-center" th:if="${#lists.isEmpty(cartItemList)}">
                    <div>
                        <h1>NO ITEM!</h1>
                    </div>
                </div>
            </th:block>
        </div>
    </th:block>

    <div th:fragment="footer">
        <div class="container-fluid bg-secondary text-dark mt-5 pt-5">
            <div class="row px-xl-5 pt-5">
                <div class="col-lg-4 col-md-12 mb-5 pr-3 pr-xl-5">
                    <a href="" class="text-decoration-none">
                        <h1 class="mb-4 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border border-white px-3 mr-1">E</span>Shopper</h1>
                    </a>
                    <p>Dolore erat dolor sit lorem vero amet. Sed sit lorem magna, ipsum no sit erat lorem et magna ipsum dolore amet erat.</p>
                    <p class="mb-2"><i class="fa fa-map-marker-alt text-primary mr-3"></i>Da Oai commune, Da Huoai district, Lam Dong province, Viet Nam</p>
                    <p class="mb-2"><i class="fa fa-envelope text-primary mr-3"></i>voduc0100@gmail.com</p>
                    <p class="mb-0"><i class="fa fa-phone-alt text-primary mr-3"></i>+0869990187</p>
                </div>
                <div class="col-lg-8 col-md-12">
                    <div class="row">
                        <div class="col-md-4 mb-5">
                            <h5 class="font-weight-bold text-dark mb-4">Quick Links</h5>
                            <div class="d-flex flex-column justify-content-start">
                                <a class="text-dark mb-2" th:href="@{/}"><i class="fa fa-angle-right mr-2"></i>Home</a>
                                <a class="text-dark mb-2" th:href="@{/category/all}"><i class="fa fa-angle-right mr-2"></i>Our Shop</a>
                                <a class="text-dark mb-2" th:href="@{/product/9}"><i class="fa fa-angle-right mr-2"></i>Shop Detail</a>
                                <a class="text-dark mb-2" th:href="@{/cart}"><i class="fa fa-angle-right mr-2"></i>Shopping Cart</a>
                                <a class="text-dark mb-2" th:href="@{/order}"><i class="fa fa-angle-right mr-2"></i>Checkout</a>
                                <a class="text-dark" th:href="@{/contact}"><i class="fa fa-angle-right mr-2"></i>Contact Us</a>
                            </div>
                        </div>
                        <div class="col-md-4 mb-5">
                            <h5 class="font-weight-bold text-dark mb-4">Quick Links</h5>
                            <div class="d-flex flex-column justify-content-start">
                                <a class="text-dark mb-2" th:href="@{/}"><i class="fa fa-angle-right mr-2"></i>Home</a>
                                <a class="text-dark mb-2" th:href="@{/category/all}"><i class="fa fa-angle-right mr-2"></i>Our Shop</a>
                                <a class="text-dark mb-2" th:href="@{/product/9}"><i class="fa fa-angle-right mr-2"></i>Shop Detail</a>
                                <a class="text-dark mb-2" th:href="@{/cart}"><i class="fa fa-angle-right mr-2"></i>Shopping Cart</a>
                                <a class="text-dark mb-2" th:href="@{/order}"><i class="fa fa-angle-right mr-2"></i>Checkout</a>
                                <a class="text-dark" th:href="@{/contact}"><i class="fa fa-angle-right mr-2"></i>Contact Us</a>
                            </div>
                        </div>
                        <div class="col-md-4 mb-5">
                            <h5 class="font-weight-bold text-dark mb-4">Newsletter</h5>
                            <form th:action="@{/register}" method="get">
                                <div class="form-group">
                                    <input type="text" class="form-control border-0 py-4" placeholder="Your Name" required="required" />
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control border-0 py-4" placeholder="Your Email"
                                           required="required" />
                                </div>
                                <div>
                                    <button class="btn btn-primary btn-block border-0 py-3" type="submit">Subscribe Now</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row border-top border-light mx-xl-5 py-4">
                <div class="col-md-6 px-xl-0">
                    <p class="mb-md-0 text-center text-md-left text-dark">
                        &copy; <a class="text-dark font-weight-semi-bold" href="#">Your Site Name</a>. All Rights Reserved. Designed
                        by
