                                <td class="align-middle" id="priceItem" th:value="<%= item.ProductDetail.price - item.ProductDetail.price * item.ProductDetail.discount/100 %>đ">
                                    <%= item.ProductDetail.price - item.ProductDetail.price * item.ProductDetail.discount/100 %>đ
                                </td>
                                <td class="align-middle">
