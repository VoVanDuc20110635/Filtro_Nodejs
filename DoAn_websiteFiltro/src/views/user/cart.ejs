    <script>
        function changeCheckboxColor(checkbox) {
            var checkboxesMasters = document.querySelectorAll('.masterCheckbox');
            checkboxesMasters.forEach(function (masterCheckbox) {
                var checkmarkMaster = masterCheckbox.nextElementSibling; 
                var checkmark = checkbox.nextElementSibling; // Get the <span> element
                if (checkbox.checked) {
                    checkmark.innerHTML = '✔';
                } else {
                    checkmark.innerHTML = '';
                    checkmarkMaster.innerHTML = '';
                }
            });
            
        }
        function toggleAllCheckboxes(masterCheckbox) {
        // Get all checkboxes with the class 'itemCheckbox'
            var checkboxes = document.querySelectorAll('.itemCheckbox');
            // Iterate through each checkbox and set its state based on the master checkbox
            checkboxes.forEach(function (checkbox) {
                var checkmark = checkbox.nextElementSibling; 
                if (masterCheckbox.checked) {
                checkmark.innerHTML = '✔';
                } else {
                    checkmark.innerHTML = '';
                }
            });
            var checkmarkMaster = masterCheckbox.nextElementSibling; 
            if(masterCheckbox.checked){
                checkmarkMaster.innerHTML = '✔';
            } else{
                checkmarkMaster.innerHTML = '';
            }
        }
        function submitUpdateCartForm() {
            var hiddenForm = document.getElementById('hiddenForm');
            var productIdsInput = document.getElementById('productIdsInput');
            var quantitiesInput = document.getElementById('quantitiesInput');
            var pricesInput = document.getElementById('pricesInput');
            
            productIdsInput.value = '';
            quantitiesInput.value = '';
            pricesInput.value = '';
            // Lấy tất cả các hàng (rows)
            var rows = document.querySelectorAll('.align-middle tr');

            // Duyệt qua từng hàng
            rows.forEach(function (row) {
                var checkbox = row.querySelector('input[type="checkbox"]');
                if (checkbox.checked) {
                    var productId = row.querySelector('.productDetailIdPro').value;
                    var quantityInput = row.querySelector('.quantityPro');
                    var priceInput = row.querySelector('.pricePro').value;
                    console.log(priceInput);
                    // Cập nhật giá trị của input
                    productIdsInput.value += productId + ',';
                    quantitiesInput.value += quantityInput.value + ',';
                    pricesInput.value += priceInput + ',';
                }
            });

            // Xóa dấu phẩy cuối cùng trong danh sách
            productIdsInput.value = productIdsInput.value.slice(0, -1);
            quantitiesInput.value = quantitiesInput.value.slice(0, -1);
            pricesInput.value = pricesInput.value.slice(0, -1);
            // Gửi form
            hiddenForm.submit();

        }
    </script>

