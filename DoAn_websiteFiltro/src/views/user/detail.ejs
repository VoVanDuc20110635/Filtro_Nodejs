                        Review (<%= numberOfFeedback %>)
                    </a>
                </div>
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="tab-pane-1">
                        <h4 class="mb-3">Product Description</h4>
                        <p><%=product.description %></p>
                    </div>
                    <div class="tab-pane fade" id="tab-pane-3">
                        <div class="row">
                            <div class="col-md-6">
                                <h4 class="mb-4">
                                    <%= numberOfFeedback + ' review for ' + product.productName %>
                                </h4>
                                <% feedbackList.forEach(function(feedback) { %>
                                    <div class="media-feedback mb-4">
                                        <div class="media-body-feedback">
                                            <h6>
                                                <%= feedback.User.name %> <small> - <i>
                                                            <%= feedback.date %>
                                                        </i></small>
                                            </h6>
                                            <div class="text-primary mb-2" id="<%= 'ratingStars-' + feedback.id %>">
                                                <i class="far fa-star"></i>
                                                <i class="far fa-star"></i>
                                                <i class="far fa-star"></i>
                                                <i class="far fa-star"></i>
                                                <i class="far fa-star"></i>
                                                <input type="hidden" id="<%= feedback.stars %>"
                                                    value="<%= feedback.stars %>" name="numberOfStars">
                                            </div>
                                            <p>
                                                <%= feedback.content %>
                                            </p>
                                            <hr>
                                        </div>
                                    </div>
                                    <% }); %>
                            </div>
                            <div class="col-md-6">
                                <h4 class="mb-4">Leave a review</h4>
                                <% if (session.user !=null) { %>
                                    <small>Your email address will not be published. Required fields are marked
                                        *</small>
                                    <div class="d-flex my-3">
                                        <p class="mb-0 mr-2">Your Rating * :</p>
                                        <div class="text-primary">
                                            <i class="far fa-star fa-star-comment" onclick="setRating(1)"></i>
                                            <i class="far fa-star fa-star-comment" onclick="setRating(2)"></i>
                                            <i class="far fa-star fa-star-comment" onclick="setRating(3)"></i>
                                            <i class="far fa-star fa-star-comment" onclick="setRating(4)"></i>
                                            <i class="far fa-star fa-star-comment" onclick="setRating(5)"></i>
                                        </div>
                                    </div>
                                    <form action="/product/<%= product.productId %>/feedback" method="POST">
                                        <div id="errorMessage" <% if (typeof errorMessage !=='undefined' &&
                                            errorMessage) { %> class="alert alert-danger" <% } %> role="alert">
                                                <% if (typeof errorMessage !=='undefined' && errorMessage) { %>
                                                    <%= errorMessage %>
                                                        <% } %>
                                        </div>
                                        <div class="form-group">
                                            <label for="message">Your Review *</label>
                                            <textarea name="content" id="message" cols="30" rows="5"
                                                class="form-control"></textarea>
                                        </div>
                                        <div class="form-group mb-0">
                                            <input type="hidden" id="numberOfStarsInput" name="numberOfStars"
                                                value="<%= numberOfFeedback %>">
                                            <input type="submit" value="Leave Your Review" class="btn btn-primary px-3">
                                            <input type="hidden" name="currentDay" id="currentDay" value="">
                                        </div>
                                    </form>
                                    <% } else { %>
                                        <h4 class="text-center">Please login to comment!</h4>
                                        <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
